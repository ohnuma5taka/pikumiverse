{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "pikmiverse-web": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/out-tsc",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": [
              "zone.js"
            ],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/favicon.png",
              {
                "glob": "**/*",
                "input": "src/app/assets/",
                "output": "assets/"
              },
              {
                "glob": "**/*",
                "input": "public"
              }
            ],
            "styles": [
              "node_modules/material-design-icons/iconfont/material-icons.css",
              "node_modules/@mdi/font/css/materialdesignicons.min.css",
              "node_modules/animate.css/animate.min.css",
              "src/app/styles/constant.scss",
              "src/app/styles/media.scss",
              "src/app/styles/color.scss",
              "src/app/styles/flex.scss",
              "src/app/styles/size.scss",
              "src/app/styles/spacing.scss",
              "src/app/styles/typography.scss",
              "src/app/styles/material.scss",
              "src/app/styles/global.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/app/styles",
                "src/app/assets",
                "./node_modules"
              ]
            },
            "scripts": [],
            "preserveSymlinks": true
          },
          "configurations": {
            "prod": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "3mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "100kb",
                  "maximumError": "300kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "src/environments/env.ts",
                  "with": "src/environments/env.prod.ts"
                }
              ],
              "extractLicenses": true,
              "namedChunks": false,
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false
            },
            "dev": {
              "fileReplacements": [
                {
                  "replace": "src/environments/env.ts",
                  "with": "src/environments/env.dev.ts"
                }
              ],
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            },
            "local": {
              "fileReplacements": [
                {
                  "replace": "src/environments/env.ts",
                  "with": "src/environments/env.local.ts"
                }
              ],
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            },
            "test": {
              "fileReplacements": [
                {
                  "replace": "src/environments/env.ts",
                  "with": "src/environments/env.test.ts"
                }
              ],
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "prod"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "prod": {
              "buildTarget": "pikmiverse-web:build:prod"
            },
            "dev": {
              "buildTarget": "pikmiverse-web:build:dev",
              "proxyConfig": "proxy/proxy.dev.conf.json"
            },
            "local": {
              "buildTarget": "pikmiverse-web:build:local",
              "proxyConfig": "proxy/proxy.local.conf.json"
            },
            "test": {
              "buildTarget": "pikmiverse-web:build:test"
            }
          },
          "options": {
            "allowedHosts": [
              "0.0.0.0"
            ]
          },
          "defaultConfiguration": "local"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n"
        }
      }
    }
  },
  "cli": {
    "analytics": "0671854b-b8ee-40b2-aa06-b3cef949fea9"
  }
}
